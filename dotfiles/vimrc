" --- General Settings ---
set nocompatible         " Behave like a real Vim, not Vi
set backspace=indent,eol,start  " Allow backspace to delete everything
set number               " Show line numbers
set cursorline           " Highlight the current line
set showmatch            " Show matching brackets
set incsearch            " Incremental search
set wildmenu             " Enable command line completion menu

let mapleader = " "

nnoremap <Space> <Nop>
nnoremap <leader>f :Files<CR>
nnoremap <leader>g :Rg<CR>
nnoremap <leader>b :Buffers<CR>
nnoremap <leader>e :Ex<CR>
set tabstop=4
set shiftwidth=4
set expandtab
set ignorecase
set nonumber
set smartcase
set laststatus=2      " Always show the status line
set statusline=%t     " Show the filename
set statusline+=\ %h%m%r     " Flags
set statusline+=%=           " Right-align
set statusline+=\ %l:%c      " Line and column
set statusline+=\ %P         " Percentage


colorscheme koehler

" --- Plugin Manager (Vim-Plug) ---
call plug#begin('~/.vim/plugged')

Plug 'neoclide/coc.nvim', {'branch': 'release'}
Plug 'tpope/vim-commentary'
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
Plug 'junegunn/fzf.vim'

call plug#end()

" --- Plugin-specific Settings ---
